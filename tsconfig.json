{
  "compilerOptions": {
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "declaration": true,
    "outDir": "lib/"
  },
  "exclude": [
      "node_modules",
      "lib",
      "samples"
  ],
  "include": [
      "./src/index.ts",
      "./test/*.ts"
  ]
}